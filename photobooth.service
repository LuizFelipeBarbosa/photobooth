[Unit]
Description=Photobooth Web Server
After=network.target

[Service]
# Adjust these paths to match your Raspberry Pi setup
# Assuming standard user 'pi' and repository cloned to /home/pi/photobooth
User=pi2
WorkingDirectory=/home/pi2/Documents/photobooth
Environment=PYTHONUNBUFFERED=1

# Command to run the server
# If you are using a virtual environment (recommended), point to the 'python' inside venv
# Example: ExecStart=/home/pi/photobooth/venv/bin/python3 server.py
ExecStart=/usr/bin/python3 server.py

# Restart automatically if it crashes
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
